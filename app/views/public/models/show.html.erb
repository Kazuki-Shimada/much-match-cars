<h2 class="mx-5 mt-3"><%= @model.manufacturer.name %>/<%= @model.name %></h2>
<div class="container text-center">
  <%= image_tag @model.get_model_image(200,200) %>
  <table class="table">
    <tr>
      <th></th>
      <th>価格</th>
      <th>レビュー数</th>
    </tr>
    <% @model.types.each do |type| %>
      <tr>
        <th>
          <%= link_to type_path(type) do %>
            <%= type.name %>
          <% end %>
        </th>
        <td>¥ <%= type.price.to_s(:delimited) %></td>
        <td><%= type.reviews.count %></td>
      </tr>
    <% end %>
  </table>

</div>