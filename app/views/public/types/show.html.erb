<h2 class="mx-5 mt-5">タイプ詳細</h2>
<div class="container text-center">
  <%= image_tag @type.model.get_model_image(200,200) %>
  <table class="table mt-3">
    <tr>
      <th>メーカー</th>
      <td><%= @type.model.manufacturer.name %></td>
    </tr>
    <tr>
      <th>車種</th>
      <td><%= @type.model.name %></td>
    </tr>
    <tr>
      <th>タイプ</th>
      <th><%= @type.name %></th>
    </tr>
    <tr>
      <th>最大乗用人数</th>
      <th><%= @type.capacity %></th>
    </tr>
    <tr>
      <th>排気量</th>
      <th><%= @type.displacement %></th>
    </tr>
    <tr>
      <th>燃費</th>
      <th><%= @type.fuel_consumption %></th>
    </tr>
    <tr>
      <th>燃料</th>
      <th><%= @type.fuel %></th>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <th><%= @type.is_selling %></th>
    </tr>
  </table>
  <h2>総合評価</h2>
  <table class="table">
    <tr>
      <th>デザイン</th>
      <td>
        <% @type.reviews.each do |type| %>
          <% @total += type.design %>
        <% end %>
        <%= @total / @type.reviews.count %>
        <% @total = 0 %>
      </td>
    </tr>
    <tr>
      <th>運転性能</th>
      <td>
        <% @type.reviews.each do |type| %>
          <% @total += type.driving_performance %>
        <% end %>
        <%= @total / @type.reviews.count %>
        <% @total = 0 %>
      </td>
    </tr>
    <tr>
      <th>価格</th>
      <td>
        <% @type.reviews.each do |type| %>
          <% @total += type.cost %>
        <% end %>
        <%= @total / @type.reviews.count %>
        <% @total = 0 %>
      </td>
    </tr>
    <tr>
      <th>広さ</th>
      <td>
        <% @type.reviews.each do |type| %>
          <% @total += type.size %>
        <% end %>
        <%= @total / @type.reviews.count %>
        <% @total = 0 %>
      </td>
    </tr>
    <tr>
      <th>安全性能</th>
      <td>
        <% @type.reviews.each do |type| %>
          <% @total += type.safety %>
        <% end %>
        <%= @total / @type.reviews.count %>
        <% @total = 0 %>
      </td>
    </tr>
    <tr>
      <th>総合点</th>
      <td>
        <% @type.reviews.each do |type| %>
          <% @total += type.rate %>
        <% end %>
        <%= @total / @type.reviews.count %>
        <% @total = 0 %>
      </td>
    </tr>
  </table>
</div>
