<h2 class="mx-5 mt-5"><%= @user.name %>さんのユーザー詳細</h2>
<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
  <div class="container text-center">
    <table class="table">
      <tr class="field">
        <th>会員ID</th>
        <td>
          <%= @user.id %>
        </td>
      </tr>
      <tr>
        <th>氏名</th>
        <td>
          <%= @user.name %>
        </td>
      </tr>
        <th>メールアドレス</th>
        <td>
          <%= @user.email %>
        </td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted_false, "有効" %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted_true, "退会" %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <div class="actions">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        </td>
        <td></td>
      </tr>
    </table>
  </div>
<% end %>
